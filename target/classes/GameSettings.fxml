<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<GridPane fx:controller="it.polimi.ingsw.view.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Game Settings" id="header"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Game ID" id="text"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="gameID"
               GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    <Label text="Game Mode" id="text"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="gameMode"
               GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <Label text="Number Of Players" id="text"
           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="numOfPlayers"
               GridPane.columnIndex="3" GridPane.rowIndex="3"/>

    <HBox spacing="10" alignment="BOTTOM_CENTER"
          GridPane.columnIndex="2" GridPane.rowIndex="5">
        <Button text="CREATE GAME"
            onAction="#submitGame"/>
    </HBox>

    <stylesheets>
        <URL value="@LoginStyle.css" />
    </stylesheets>

</GridPane>
